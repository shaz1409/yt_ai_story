# Application Configuration
# Copy this file to .env and fill in your values

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# TTS Settings
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here

# Hugging Face Image Generation
HF_ENDPOINT_URL=https://your-endpoint-id.endpoints.huggingface.cloud
HF_ENDPOINT_TOKEN=your_hf_endpoint_token_here

# YouTube Upload (optional)
YOUTUBE_CLIENT_SECRETS_FILE=secrets/client_secrets.json

# Service Toggles
USE_LLM_FOR_DIALOGUE=true
USE_LLM_FOR_METADATA=true
USE_OPTIMISATION=false
